<div class="col-lg-12"><h1><%= @album.name %></h1>
  <h4>Artist: <%= @album.artist %></h4>
  <h4><strong>Ranking: <%= @album.rank %></strong></h4>
  <p>
    <%= @album.description %>
  </p>
  <%= button_to "Upvote", album_voteup_path(@album.id), class:"btn btn-success" %>
  <div class="button-display">
    <%= link_to "Edit #{@album.name}", edit_album_path(@album.id), class:"btn btn-primary active", role:"button" %>
    <%= button_to "Delete", album_path(@album.id), method: :delete, class:"btn btn-danger" %>
    <%= link_to "View All Albums", albums_path, class:"btn btn-primary active", role:"button" %>
    <%= link_to "View All Media", root_path, class:"btn btn-primary active", role:"button" %>
  </div>
</div>
