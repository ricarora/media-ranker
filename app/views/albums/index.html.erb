<h1>Albums</h1>
  <table class="table table-hover">
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Artist
      </th>
      <th>
        Description
      </th>
      <th>
        Upvote
      </th>
    </tr>
    <% @albums.each do |album| %>
    <tr>
      <td>
        Ranking: <%= album.rank %>
      </td>
      <td>
        <%= link_to "#{album.name}", album_path(album.id) %>
      </td>
      <td>
        <%= album.artist %>
      </td>
      <td>
        <%= album.description %>
      </td>
      <td>
        <%= button_to "Upvote", album_voteup_path(album.id), class:"btn btn-success" %>
      </td>
    </tr>

<% end %>
</table>

<div><%= link_to "All Media", root_path, class:"btn btn-primary active", role:"button" %>
<%= link_to "Add an Album", new_album_path, class:"btn btn-primary active", role:"button" %></div>
