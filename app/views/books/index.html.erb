<h1>Books</h1>
  <table class="table table-hover">
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Author
      </th>
      <th>
        Description
      </th>
      <th>
        Upvote
      </th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td>
        Ranking: <%= book.rank %>
      </td>
      <td>
        <%= link_to "#{book.name}", book_path(book.id) %>
      </td>
      <td>
        <%= book.author %>
      </td>
      <td>
        <%= book.description %>
      </td>
      <td>
        <%= button_to "Upvote", book_voteup_path(book.id), class:"btn btn-success" %>
      </td>
    </tr>

<% end %>
</table>

<div><%= link_to "All Media", root_path, class:"btn btn-primary active", role:"button" %>
<%= link_to "Add a Book", new_book_path, class:"btn btn-primary active", role:"button" %></div>
