<h1><%= @book.name %></h1>
<h4>Author: <%= @book.author %></h4>
<h4><strong>Ranking: <%= @book.rank %></strong></h4>
<p>
  <%= @book.description %>
</p>
<%= button_to "Upvote", book_voteup_path(@book.id) %>
<%= link_to "Edit #{@book.name}", edit_book_path(@book.id) %>
<%= button_to "Delete", book_path(@book.id), method: :delete %>
<%= link_to "View All Books", books_path %>
<%= link_to "View All Media", root_path %>
