<h1>Movies</h1>
  <table class="table table-hover">
    <tr>
      <th>
        Ranking
      </th>
      <th>
        Name
      </th>
      <th>
        Director
      </th>
      <th>
        Description
      </th>
      <th>
        Upvote
      </th>
    </tr>
    <% @movies.each do |movie| %>
    <tr>
      <td>
        Ranking: <%= movie.rank %>
      </td>
      <td>
        <%= link_to "#{movie.name}", movie_path(movie.id) %>
      </td>
      <td>
        <%= movie.director %>
      </td>
      <td>
        <%= movie.description %>
      </td>
      <td>
        <%= button_to "Upvote", movie_voteup_path(movie.id) %>
      </td>
    </tr>

<% end %>
</table>

<div><%= link_to "All Media", root_path %>
<%= link_to "Add a Movie", new_movie_path %></div>
