<%= form_for @album, {class: "form-horizontal", role: "form"} do |f| %>
<div class="form-group">
<%= f.label :name, "Album Title", {class: "col-sm-2 control-label"} %>
<%= f.text_field :name, {class: "col-sm-10"} %>
</div>
<div class="form-group">
<%= f.label :artist, "Artist", {class: "col-sm-2 control-label"} %>
<%= f.text_field :artist, {class: "col-sm-10"} %>
</div>
<div class="form-group">
<%= f.label :description, "Description", {class: "col-sm-2 control-label"} %>
<%= f.text_field :description, {class: "col-sm-10"} %>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit %>
  </div>
</div>
<% end %>
