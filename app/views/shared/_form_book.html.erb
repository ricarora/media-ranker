<%= form_for @book, {class: "form-horizontal", role: "form"} do |f| %>
<div class="form-group">
<%= f.label :name, "Book Title", {class: "col-sm-2 control-label"} %>
<%= f.text_field :name, {class: "col-sm-10"} %>
</div>
<div class="form-group" "space">
<%= f.label :author, "Author", {class: "col-sm-2 control-label"} %>
<%= f.text_field :author, {class: "col-sm-10"} %>
</div>
<div class="form-group">
<%= f.label :description, "Description", {class: "col-sm-2 control-label"} %>
<%= f.text_field :description, {class: "col-sm-10"} %>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
<%= f.submit %>
  </div>
</div>
<% end %>
